doctype html
html lang="en"
  head
    meta charset="utf-8"
    meta content="IE=Edge,chrome=1" http-equiv="X-UA-Compatible"
    meta content="width=device-width, initial-scale=1.0" name="viewport"
    title= content_for?(:title) ? yield(:title) : "Orders"
    = csrf_meta_tags
    = stylesheet_link_tag "application", media: "all", 'data-turbolinks-track': 'reload'
    /! <script src="https://www.paypalobjects.com/api/checkout.js" type="text/javascript"></script>
    <script src="https://www.paypal.com/sdk/js?client-id=#{PAYPAL_PARTNER_CLIENT_ID}" data-partner-attribution-id="#{PAYPAL_BN_CODE}"></script>
    = javascript_include_tag "application", 'data-turbolinks-track': 'reload'
    /! <link rel="icon" href="/favicon.ico" type="image/x-icon"
    /! <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon"
    = csrf_meta_tags
  body
    .navbar.navbar-default.navbar-static-top role="navigation"
      .container
        .navbar-header
          button.navbar-toggle data-target=".navbar-collapse" data-toggle="collapse" type="button"
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand href="/"  Orders
        .navbar-collapse.collapse
          = render 'shared/nav'
    .container.page
      .row
        .col-sm-12
          = render 'shared/bootstrap_flash'
          = yield
